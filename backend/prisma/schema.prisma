generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "darwin", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enums
enum MilitaryStatus {
  CHUA_NHAP_NGU
  DANG_TAI_NGU
  XUAT_NGU
}

enum MilitiaRole {
  CHIENSI
  TIEUDOITRUONG
  TRUNGDOITRUONG
  CHIHUYPHO
  CHIHUYTRUONG
}

enum AttendanceUnit {
  UY_BAN
  QUAN_SU
}

enum AttendanceStatus {
  CO_MAT
  VANG
  NGHI_PHEP
}

// Models
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sequence {
  name      String   @id
  value     Int      @default(0)
  updatedAt DateTime @updatedAt
}

model Military {
  id                String         @id @default(uuid()) // Ẩn khỏi UI
  recordCode        String?        @unique // Mã hồ sơ
  fullName          String         // Họ và tên
  dateOfBirth       DateTime       // Ngày sinh
  occupation        String?        // Nghề nghiệp
  permanentResidence String?       // Hộ khẩu thường trú (Khu phố)
  specificAddress   String?        // Địa chỉ cụ thể
  ethnicity         String?        // Dân tộc
  religion          String?        // Tôn giáo
  education         String?        // Học vấn, Chuyên môn kỹ thuật
  graduationStatus  String?        // Đã tốt nghiệp hoặc niên khóa đang học
  partyMember       String?        // Đảng viên, đoàn viên hay không
  familyInfo        String?        // Thông tin Cha, Mẹ, Vợ/Chồng, nghề nghiệp
  status            MilitaryStatus @default(CHUA_NHAP_NGU)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
}

model Militia {
  id        String      @id @default(uuid())
  recordCode String?    @unique
  fullName  String
  ward      String
  role      MilitiaRole
  phone     String
  active    Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Attendance {
  id        String            @id @default(uuid())
  date      DateTime
  fullName  String
  unit      AttendanceUnit
  status    AttendanceStatus
  note      String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model ProfileForm {
  id                    String    @id @default(uuid())
  
  // Thông tin cá nhân
  fullName              String    // Họ và tên
  dateOfBirth           DateTime  // Ngày sinh
  idNumber              String    // CMND/CCCD
  placeOfBirth          String    // Nơi sinh
  nationality           String?   @default("Việt Nam") // Quốc tịch
  religion              String?   // Tôn giáo
  education             String?   // Trình độ học vấn
  occupation            String?   // Nghề nghiệp
  address               String    // Địa chỉ
  phone                 String    // Số điện thoại
  
  // Thông tin gia đình
  fatherName            String    // Họ tên cha
  fatherOccupation      String    // Nghề nghiệp cha
  fatherAddress         String?   // Địa chỉ cha
  motherName            String    // Họ tên mẹ
  motherOccupation      String    // Nghề nghiệp mẹ
  motherAddress         String?   // Địa chỉ mẹ
  
  // Thông tin nghĩa vụ quân sự
  militaryCode          String?   // Mã hồ sơ
  ward                  String?   // Khu phố
  unit                  String?   // Đơn vị
  status                String?   @default("Chưa nhập ngũ") // Trạng thái
  enlistmentDate        DateTime? // Ngày nhập ngũ
  dischargeDate         DateTime? // Ngày xuất ngũ
  militaryRank          String?   // Cấp bậc
  militaryUnit          String?   // Đơn vị quân đội
  
  // Thông tin bổ sung
  healthStatus          String?   // Tình trạng sức khỏe
  criminalRecord        String?   // Tiền án tiền sự
  politicalBackground   String?   // Lý lịch chính trị
  foreignTravel         String?   // Đi nước ngoài
  notes                 String?   // Ghi chú
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}